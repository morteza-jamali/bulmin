{
  "name": "bulmin",
  "version": "0.1.0",
  "author": "Morteza Jamali <mortezajamali4241@gmail.com> (https://morteza-jamali.github.io)",
  "description": "Bulma javascript framework rewritted with Hyperscript and ACSS methodology",
  "license": "MIT",
  "keywords": [
    "css",
    "sass",
    "flexbox",
    "responsive",
    "framework",
    "bulma",
    "acss",
    "atomic",
    "methodology"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/bulmin.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/bulmin.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/bulmin.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@storybook/addon-essentials": "^6.1.18",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.18",
    "@storybook/addons": "^6.1.18",
    "@storybook/react": "^6.1.18",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@moraj/react-hyper": "0.0.3",
    "babel-loader": "^8.2.2",
    "husky": "^5.0.9",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5",
    "atomizer": "^3.9.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/morteza-jamali/bulmin.git"
  },
  "bugs": {
    "url": "https://github.com/morteza-jamali/bulmin/issues"
  },
  "homepage": "https://github.com/morteza-jamali/bulmin#readme"
}